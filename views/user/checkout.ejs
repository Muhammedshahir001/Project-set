      var rzp1 = new Razorpay(options);
      rzp1.open();
    }

    function verifyPayment(payment, order) {
      $.ajax({
        url: "/verifyPayment",
        method: 'post',
        data: {
          payment,
          order
        },
        success: (response) => {
          if (response.success == true) {
            window.location.href = "/orderplaced";
          } else if (response.onlineSuccess) {
            Swal.fire({
