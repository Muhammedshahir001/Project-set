    <script>
		function downloadPDF() {
			var details = document.getElementById("tabledata");
			var newWin = window.open('', 'Print-Window');
			newWin.document.open();
			newWin.document.write('<html><head><style>@media print { @page { size: A4; margin: 0; } }</></head><body onload="window.print()">' + details.outerHTML + '</html>'); newWin.document.close();
			setTimeout(function () { newWin.close(); }, 10);
		}
	</script>
