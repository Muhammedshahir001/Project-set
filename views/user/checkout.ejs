                      <p class="d-flex">
                        <span>Subtotal :</span>
                        Rs:
                        <span id="total">
                          <%= total%>
                        </span>
                      </p>
                      <p class="d-flex">
                        <span>Delivery :</span>
                        <span>Rs:0.00</span>
                      </p>
                      <p class="d-flex">
                        <span>Wallet :</span>
                        Rs:
                        <span id="wallet"><%=wallet%></span>
                      </p>
                      <div class="d-flex flex-row justify-content-between">
                        <span>Discount :</span>
                        <span id="coupondiscount" style="color:#e5380d"></span>
                        <p class="text-end"> <a href="/checkout"> Remove coupon </a></p>
                      </div>

                      <hr />
                      <p class="d-flex ">
                        <span>Total :</span>
                        Rs:
                        <span id="total-amount">
                          <%=total%>
                        </span>
                      </p>
                    </div>
                  </div>
                  <div class="col-md-6">
